class Solution {
  public:
    // Function to find maximum number of consecutive steps
    // to gain an increase in altitude with each step.
    int maxStep(vector<int>& arr) {
        // Your code here
        int maxi=0;
        for(int i=0;i<arr.size()-1;i++)
        {
            int count=0;
            for(int j=i;j<arr.size()-1;j++)
            {
                if(arr[j+1]>arr[j])
                {
                    count++;
                }
                else
                {
                    break;
                }
            }
            maxi=max(maxi,count);
        }
        return maxi;
    }
};
